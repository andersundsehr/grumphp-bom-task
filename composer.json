{
    "name": "andersundsehr/grumphp-bom-task",
    "description": "Force files to have no BOM",
    "type": "library",
    "license": "beerware",
    "authors": [
        {
            "name": "Matthias Vogel",
            "email": "m.vogel@andersundsehr.com",
            "homepage": "http://andersundsehr.com"
        }
    ],
    "support": {
        "issues": "https://github.com/andersundsehr/grumphp-bom-task/issues"
    },
    "bin": ["bin/fixbom"],
    "autoload":{
        "psr-4":{
            "AUS\\GrumPHPBomTask\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4":{
            "AUS\\GrumPHPBomTask\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6",
        "phpro/grumphp": "0.9.*"
    },
    "require-dev": {
        "phpro/grumphp": "0.9.*",
        "squizlabs/php_codesniffer": "2.6.*",
        "friendsofphp/php-cs-fixer": "1.11.*"
    }
}
