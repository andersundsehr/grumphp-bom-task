{
    "name": "pluswerk/grumphp-bom-task",
    "description": "Force files to have no BOM",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Matthias Vogel",
            "email": "matthias.vogel@pluswerk.ag",
            "homepage": "http://pluswerk.ag"
        }
    ],
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "support": {
        "issues": "https://github.com/pluswerk/grumphp-bom-task/issues"
    },
    "bin": ["bin/fixbom"],
    "autoload":{
        "psr-4":{
            "PLUS\\GrumPHPBomTask\\": "src/"
        }
    },
    "require": {
        "php": ">=7.3",
        "phpro/grumphp": "^1.3.3",
        "opis/closure": "^3.6.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": ">=3.5.0 <4.0.0"
    }
}
