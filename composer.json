{
    "name": "pluswerk/grumphp-bom-task",
    "description": "Force files to have no BOM",
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Matthias Vogel",
            "email": "matthias.vogel@pluswerk.ag",
            "homepage": "http://pluswerk.ag"
        }
    ],
    "config":{
        "platform":{
            "php": "5.6"
        }
    },
    "support": {
        "issues": "https://github.com/pluswerk/grumphp-bom-task/issues"
    },
    "bin": ["bin/fixbom"],
    "autoload":{
        "psr-4":{
            "PLUS\\GrumPHPBomTask\\": "src/"
        }
    },
    "require": {
        "php": ">=5.6",
        "phpro/grumphp": "^0.11.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "2.6.*"
    }
}
